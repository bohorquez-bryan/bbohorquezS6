<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bbohorquezS6.View.vAgregar"
             Title="AGREGAR">
    <VerticalStackLayout Spacing="20">
        
            <Label 
            Text="Agregar Estudiante"
            FontSize="22"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry x:Name="txtNombre" Placeholder="Ingrese el nombre"/>
        <Entry x:Name="txtApellido" Placeholder="Ingrese el apellido"/>
        <Entry x:Name="txtEdad" Placeholder="Ingrese la edad"/>
        <Button x:Name="btnGuardar" Text="Guardar" Clicked="btnGuardar_Clicked" BackgroundColor="Green" Margin="150,20,150,0"/>



    </VerticalStackLayout>
</ContentPage>